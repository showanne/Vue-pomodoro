// For Home.vue
.font-countdown
  font normal normal bold 140px/162px Arimo
.font-current
  margin-top 5.5rem
  text-align left
  font normal normal bold 32px/37px Arimo
.bellcontrol
  padding-top 2.5rem
  position absolute
  top 0px
  left 95px
  img
    width 40px

// For List.vue
.font-listnone
  font normal normal normal 32px/37px Arimo
.table th,
.table td
  // padding 0.75rem 0.85rem?
  // vertical-align top
  border-top 1px solid #407061

.table thead:nth-child(1) th
  border-top unset

.table thead th
  // vertical-align bottom
  border-bottom 1px solid #407061

.table tbody + tbody
  border-top 1px solid #407061
.taskInput, .taskDatepicker
  height 50px !important
  margin-right 1rem
  background #0A3125 0% 0% no-repeat padding-box
  border 1px solid #CACEAC
  border-radius 4px
  &:focus 
    color #caceac
    background-color transparent
    border-color #caceac
    box-shadow none
.taskInput::placeholder
  // .taskDatepicker .form-control, .taskDatepicker .btn
  color #407061
  font italic normal normal 18px/21px Arimo
  // font：font-style font-weight font-size/line-height font-family
  letter-spacing 0px
.taskDatepicker .form-control, .taskDatepicker .btn
  vertical-align baseline !important
  color #407061 !important
.taskDatepicker label.form-control
  font-size 18px !important
  font-style italic
  line-height 36px
  text-align left
  margin-left 1.25rem !important
  // line-height 33px !important  // 加了這個日期選擇會當掉
.w-Datepicker
  width calc(100% - 172px)
.taskBtn
  width 155px
  height 40px
  font: normal normal normal 20px/23px Arimo;
  text-transform capitalize
  // background #CACEAC 0% 0% no-repeat padding-box
  border-radius 4px

