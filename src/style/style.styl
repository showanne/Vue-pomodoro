// For All
.m-nav
  margin-top 110px
.vh-100
  height calc(100vh - 110px) !important
.min-vh-100
  min-height calc(100vh - 110px) !important
.py-9
  padding 9rem 0
.lp6
  letter-spacing: 0.06rem;
.img-deco
  width 245px
  height 245px
  padding 2px
.img-deco2
  max-width 490px
  max-height 490px
  padding 5px
.nav-tabs .nav-link
    border unset
    border-top-left-radius unset
    border-top-right-radius unset

.nav-tabs .nav-link:focus, .nav-tabs .nav-link:hover
  border-color unset
.tabs .nav-pills .nav-link
  color #407061
  transition 0.5s
  // table-layout: fixed;  讓連結不抖動
  // text-decoration: none;
  background-color transparent
  border-color unset 
.tabs .nav-pills .nav-link:focus, .tabs .nav-pills .nav-link:hover, .tabs .nav-pills .nav-link.active
  color #caceac
  border-bottom #caceac 4px solid

